@model CategoriesInListViewModel

@{
    this.ViewData["Title"] = "Categories";
}

<h1 class="text-center">@this.ViewData["Title"]:</h1>

<div class="row text-center">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-4 p-3 ">
            <div class="card text-white bg-info mb-3" style="max-width: 20rem;">
                <div class="card-header"><a asp-controller="Categories" asp-action="CarsByCategory" asp-route-id="@category.Id">@category.Name</a></div>
                <div class="card-body">
                    <img class="mr-3" src="@category.PictureUrl" width="277" height="170" alt="Generic placeholder image">
                </div>
            </div>
        </div>
    }
</div>
<br>